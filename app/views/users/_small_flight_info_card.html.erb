<% @upcoming_itineraries.each do |itinerary| %>
  <div class="itinerary-overview">
    <div class="destination-title ps-5 py-3">
      <%= image_tag(itinerary.destination.images.first.url) %>
      <h3 class="ps-2">Your trip to <strong><%=itinerary.destination.city%></strong></h3>
    </div>

    <div class="small-card-overview">
      <% itinerary.passenger_groups.each do |group| %>
        <div class="small-card-booking py-3">
          <button class="circle-booking me-3"></button>
          <div class="small-card-overview-info p-3">
            <p>Flight from <strong><%=group.origin_city.city%></strong></p>
            <% info = group.flight_info %>
            <div class="card-departure-info">
              <% if info[:flight_there].count >= 1 %>
                <% info[:flight_there].each do |f| %>                              
                  <p>Departure: <%= f.departure_time.strftime('%d/%b')%></p>
                  <p class="m-0">, <%= f.departure_time.strftime('%H:%M')%>h<p> 
                <% end %>                        
              <% end %>   
            </div>   
          </div>
        </div>
      <% end %>
      <div class="small-card-destination"><h4><strong><%=itinerary.destination.city%></strong></h4></div>
    </div>
  </div>
<% end %>