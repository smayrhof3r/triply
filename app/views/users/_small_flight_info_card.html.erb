<div class="itinerary-overview">
  <div class="destination-title ps-5 py-3">
    <%= image_tag(itinerary.destination.images.first.url) %>
    <h3 class="ps-2">Your trip to <strong><%=itinerary.destination.city%></strong></h3>
  </div>

  <div class="small-card-overview">
    <% PassengerGroup.order_by_flight_info(itinerary.passenger_groups).each do |group| %>
      <div class="small-card-booking py-3">
        <button class="circle-booking me-3"><i class="fa-solid fa-plane text-white fa-rotate-90"></i></button>
        <div class="small-card-overview-info p-3">
          <% info = group.flight_info %>
          <div class="card-departure-info">
            <% if info[:flight_there].count >= 1 %>
              <% info[:flight_there].each do |f| %>
                <% loc_dep_id = @airports.find(f.departure_airport_id).location_id %>
                <% loc_dep = Location.find(loc_dep_id) %>
                <% loc_arr_id = @airports.find(f.arrival_airport_id).location_id %>
                <% loc_arr = Location.find(loc_arr_id) %>
                <div>
                  <p class="border-bottom text-success">Flight from <strong class="text-primary"><%=loc_dep.city%></strong> to <strong class="text-primary"><%=loc_arr.city%></strong></p>
                  <p>Departure: <%= f.departure_time.strftime('%d/%b')%>, <%= f.departure_time.strftime('%H:%M')%>h</p>
                  <p>Arrival: <%= f.arrival_time.strftime('%d/%b')%>, <%= f.arrival_time.strftime('%H:%M')%>h</p>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
    <div class="small-card-destination"><h4><strong><%=itinerary.destination.city%></strong></h4></div>

    <%# REFACTOR RETURN FLIGHTS %>

    <% PassengerGroup.order_by_flight_info(itinerary.passenger_groups).each do |group| %>
        <% info = group.flight_info %>
        <% if info[:flight_return].count >= 1 %>
          <div class="small-cards-return">
            <div class="small-card-booking py-3">
              <button class="circle-booking-up me-3"><i class="fa-solid fa-plane text-white fa-rotate-90"></i></button>
              <div class="small-card-overview-info-return p-3">
                <div class="card-departure-info">
                  <% info[:flight_return].each do |f| %>
                    <% loc_dep_id = @airports.find(f.departure_airport_id).location_id %>
                    <% loc_dep = Location.find(loc_dep_id) %>
                    <% loc_arr_id = @airports.find(f.arrival_airport_id).location_id %>
                    <% loc_arr = Location.find(loc_arr_id) %>
                    <div>
                      <p class="border-bottom text-success">Flight from <strong class="text-primary"><%=loc_dep.city%></strong> to <strong class="text-primary"><%=loc_arr.city%></strong></p>
                      <p>Departure: <%= f.departure_time.strftime('%d/%b')%>, <%= f.departure_time.strftime('%H:%M')%>h</p>
                      <p>Arrival: <%= f.arrival_time.strftime('%d/%b')%>, <%= f.arrival_time.strftime('%H:%M')%>h</p>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
            <% end %>
        </div>
      <% end %>
  </div>
</div>
