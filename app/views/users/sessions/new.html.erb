<div class="row">
  <div class="offset-1 col-10 offset-md-3 col-md-6">
    <div class="p-3 container shadow bg-white border-success">

      <h1 class = "m-0 p-0 text-center text-success sticky-header">
          Welcome back!
        </h1>
        <h4 class = "text-center border-bottom border-primary text-primary">Let's get you off the ground... <i class="fas fa-plane-departure"></i></h4>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
          data: {turbo: false}) do |f| %>
          <%= f.input :email %>
          <%= f.input :password %>
          <div class="text-center">
            <%= f.submit 'Sign in', class: "btn btn-primary"%>
          </div>
        <% end %>


    </div>
  </div>
</div>
