<div class="row user-page pt-5">
  <div class="col-12 col-sm-4 col-md-4 upcoming-trips scroll-bar">
    <div class="py-3 ps-5 pe-2">
      <h3 class="text-center py-3">Your upcoming trips</h3>
      <% if @upcoming_itineraries.empty? %>
        <p class="text-center">You have no past trips</p>
      <% else %>
        <% @upcoming_itineraries.each_with_index do |itinerary, i| %>
          <% collapsed = (i != 0 ? true : false) %>
          <%= render 'shared/collapsible_section', section_title: "Trip to #{itinerary.destination.city}", section_partial: 'users/sessions/single_trip_info', section_partial_params: { itinerary: itinerary }, collapsed: collapsed %>
        <% end %>
      <% end %>

      <h3 class="pt-5 pb-3 text-center">Your past trips</h3>
        <% if @past_itineraries.empty? %>
          <p class="text-center">You have no past trips</p>
        <% else %>
          <% @past_itineraries.each do |itinerary| %>
            <%= render 'shared/collapsible_section', section_title: "Trip to #{itinerary.destination.city}", section_partial: 'users/sessions/single_trip_info', section_partial_params: { itinerary: itinerary }, collapsed: true %>
          <% end %>
        <% end %>
    </div>
  </div>



  <div class="col-12 col-sm-8 col-md-8">
    <div class="pt-3 px-3 itinerary-overview">
      <div class="scroll-bar">
        <%= render 'users/small_flight_info_card' %>
      </div>
    </div>
  </div>
</div>
