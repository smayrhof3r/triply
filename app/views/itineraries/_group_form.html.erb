<div class="row">
    <div class="col-12 col-md-7"><div class="d-flex align-items-center"><%= text_field_tag "origin_city#{count}", '', placeholder: 'Departure City', class: 'w-100 origin-city' %></div></div>
    <div class="col-6 col-md-2"><div class="d-flex align-items-center"><%= render 'shared/integer', label: 'Adults', field_name: "adults#{count}", form_field_class: 'adults'%></div></div>
    <div class="col-6 col-md-2"><div class="d-flex align-items-center"><%= render 'shared/integer', label: 'Children', field_name: "children#{count}", form_field_class: 'children' %></div></div>
    <div class="col-12 col-md-1 text-center text-secondary clickable <%='for-removal d-none' if count < 2 %>" data-action="click->remove-section#remove"><div class="d-flex align-items-center">
      <i class="fas fa-trash-alt"></i>
    </div></div>
</div>

