      <div class="offset-4 col-4 bg-primary text-white rounded-top shadow-x border border-primary"><h4 class="text-center">Flights to <%= @location.city %></h4></div>
      <div class="col-4 bg-success text-white rounded-top border shadow-x border-success"><h4 class="text-center">Flights home</h4></div>
    </div>
