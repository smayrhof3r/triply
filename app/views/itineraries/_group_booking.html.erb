<% flight_info = group.bookings.filter{ |b| b.status == type }.first.offer %>
<div class="col-4 rounded-start border-top-left py-2">
  <div class="d-flex flex-column h-100 justify-content-between">
    <div>
      <div class="d-flex align-items-bottom justify-content-between me-2">
        <h3 class = "m-0 p-0">
          <%=group.origin_city.city%>
        </h3>
        <div class="text-primary text-lg">â‚¬ <%=number_with_precision(flight_info["cost_per_head"]*(group.adults+group.children), precision: 2, delimiter: ',')%></div>
      </div>
      <div class = "text-primary">
        <% group.adults.times do %>
          <i class="fas fa-user mt-2"></i>
        <% end %>
        <% group.children.times do  %>
          <i class="fas fa-user text-sm"></i>
        <% end %>
      </div>
    </div>

    <%= render 'shared/booking_status_or_edit_form', type: type %>

  </div>
</div>

<div class="flight-overview-time col-4 border-start border-end border-primary shadow-x border-top-left">
  <% flight_info["flights_there"].each do |f| %>
    <%= render 'flight_info', flight: f, status: type %>
  <% end %>
</div>

<% if flight_info["flights_return"] %>
  <div class="flight-overview-time col-4 border-end border-success shadow-x border-top-left">
      <% flight_info["flights_return"].each do |f| %>
        <%= render 'flight_info', flight: f, status: type %>
      <% end %>
  </div>
<% end %>
