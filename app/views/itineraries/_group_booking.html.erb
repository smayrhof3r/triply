<% flight_info = group.flight_info%>
<div class="col-4 rounded-start border-top-left py-2">
  <div class="d-flex flex-column h-100 justify-content-between">
    <div>
      <div class="d-flex align-items-bottom justify-content-between me-2">
        <h3 class = "m-0 p-0">
          <%=group.origin_city.city%>
        </h3>
        <div class="text-primary text-lg">â‚¬ <%=flight_info[:booking].search_result.cost_per_head*(group.adults+group.children)%></div>
      </div>
      <div class = "text-primary text-sm">
        <% group.adults.times do %>
          <i class="fas fa-user mt-2"></i>
        <% end %>
        <% group.children.times do  %>
          <i class="fas fa-user text-sm"></i>
        <% end %>
      </div>
    </div>

    <% if flight_info[:booking].status != "confirmed" || !user_signed_in? %>
      <div class="d-flex justify-content-end w-100">
        <div class="clickable text-sm text-success me-3">
          <strong><i class="fas fa-check"></i> Add to itinerary</strong>
        </div>
        <div class="clickable text-sm text-secondary">
          <i class="fas fa-search"></i> Change
        </div>
      </div>
    <% else %>
      <div class="w-100 d-flex justify-content-end">
        <div class="bg-success text-white card-tag px-2">booked</div>
      </div>
    <% end %>

  </div>
</div>

<div class="flight-overview-time col-4 border-start border-end border-primary shadow-x border-top-left">
  <% flight_info[:flight_there].each do |f| %>
    <%= render 'flight_info', flight: f %>
  <% end %>
</div>

<div class="flight-overview-time col-4 border-end border-success shadow-x border-top-left">
  <% flight_info[:flight_return].each do |f| %>
    <%= render 'flight_info', flight: f %>
  <% end %>
</div>
