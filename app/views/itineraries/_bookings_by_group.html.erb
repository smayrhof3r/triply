<% if group.bookings.filter { |b| b.status == "confirmed" }.empty? %>
      <% cheapest = group.bookings.filter { |b| b.status == "cheapest" }.first %>
      <% cheapest_time = ((cheapest.offer["flights_there"].map {|f| f["duration"]}.sum + cheapest.offer["flights_return"].map {|f| f["duration"]}.sum)) %>
      <% shortest = group.bookings.filter { |b| b.status == "shortest" }.first %>
      <% shortest_time = ((shortest.offer["flights_there"].map {|f| f["duration"]}.sum + shortest.offer["flights_return"].map {|f| f["duration"]}.sum)) %>
      <% people = group.adults+group.children %>

      <div class="">
        <%= render 'shared/collapsible_section',
              section_title: "Cheapest Flight | €#{number_with_precision(cheapest.offer["cost_per_head"] * people)} | #{ActiveSupport::Duration.build(cheapest_time).inspect.gsub(" hours", "hrs").gsub(" minutes", "min").gsub(" and ", " ")} flight time",
              section_partial: 'itineraries/group_booking',
              section_partial_params: { group: group, type: "cheapest" },
              collapsed: true,
              p_x: "p-1 text-sm",
              card_body_p_x: "p-0",
              text_collapsed: "text-white",
              bg_collapsed: "bg-success",
              text_open: "text-white",
              bg_open: "bg-success" %>
      </div>
      <div class="">
        <%= render 'shared/collapsible_section',
            section_title: "Shortest Flight | €#{number_with_precision(shortest.offer["cost_per_head"] * people)} | #{ActiveSupport::Duration.build(shortest_time).inspect.gsub(" hours", "hrs").gsub(" minutes", "min").gsub(" and ", " ")} flight time",
            section_partial: 'itineraries/group_booking',
            section_partial_params: { group: group, type: "shortest" },
            collapsed: true,
            p_x: "p-1 text-sm",
            card_body_p_x: "p-0",
            text_collapsed: "text-white",
            bg_collapsed: "bg-success",
            text_open: "text-white",
            bg_open: "bg-success" %>
      </div>
      <div class="clickable text-md text-secondary">
        <strong class="text-md"><i class="ms-2 text-primary fas fa-search"></i> Choose other flights</strong>
      </div>
<% else %>
      <div class="row">
        <%= render 'group_booking', group: group, type: "confirmed" %>
      </div>
      <div class="clickable text-sm text-secondary">
        <i class="fas fa-search"></i> Change_flights
      </div>
    <% end %>
