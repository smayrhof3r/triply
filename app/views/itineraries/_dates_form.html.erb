<div class="row">
  <div class="col-9 border-end">
    <div class = "text-center mb-3"><strong>Fixed Dates</strong></div>
    <div class="d-flex align-items-center mb-3"><div class = "me-3">Departing:</div><%= date_field_tag :start_date, params[:start_date], class: "start-date form-control", min: Date.today + 1, data: {search_form_target: "startDate"}%></div>
    <div class="d-flex align-items-center mb-3"><div class = "me-3">Returning: </div><%= date_field_tag :end_date, params[:end_date], class: "form-control", min: Date.today + 1%></div>
  </div>
  <div class="col-3">
    <div class="d-flex justify-content-between h-100">
      <i class="fas fa-angle-double-left"></i>
      <div class = "d-flex flex-column align-items-center justify-content-center"><em>I'm flexible!</em></div>
    </div>
  </div>
  <div class="col-3 d-none">
    <div class="d-flex justify-content-between">
      <div><em>Fixed Dates</em></div>
      <i class="fas fa-angle-double-right"></i>
    </div>
  </div>
  <div class="col-9 d-none" >
    <div class = "text-center mb-3"><strong>Flexible Dates</strong></div>
    <div class="d-flex align-items-center mb-3"><div class = "me-3">Earliest Departing:</div><%= date_field_tag :start_date_range, params[:start_date_range], class: "date-range-start form-control mb-3", min: Date.today + 1 %></div>
    <div class="d-flex align-items-center mb-3"><div class = "me-3">Latest Returning:</div><%= date_field_tag :end_date_range, params[:end_date_range], class: "date-range-end form-control mb-3", min: Date.today + 1 %></div>
    <div data-search_form_target="dayCount"><%= render 'shared/integer', label: "Trip length (days)", field_name: "trip_length_days", form_field_class: "trip-days"%></div>
 </div>
</div>
