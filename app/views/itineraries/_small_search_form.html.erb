<div id="waiting">

</div>

<%= form_tag itineraries_path, :method => :get, data: {controller: "search-form", search_form_target: "form", action: "click->search-form#updateButton input->search-form#updateButton"} do %>
  <div class="card h-100 shadow">
    <div class="collapse show">
      <div class="card-body">
        <div class="row">
          <div class="col-6 border-end">
            <%= render 'shared/fixed_date_form' %>
          </div>
          <div class="col-6">
            <div class = "text-center mb-3"><strong>Starting Cities</strong></div>
            <div data-search-form-target="passengerGroupPartial">
              <div class="d-flex align-items-center mb-3 pt-3"><%= select_tag "origin_city1", options_for_select(Location.all.order(:city).map{|l| l.city}, params["origin_city1".to_sym]), value: params["origin_city1".to_sym], prompt: "I am departing from...*", class: 'w-100 origin-city form-control'%></div>
              <%= number_field_tag "adults1", 1, class: "d-none adults"%>
              <%= number_field_tag "children1", 0, class: "d-none"%>
            </div>
            <div data-search-form-target="passengerGroupPartial">
              <div class="d-flex align-items-center mb-3"><%= select_tag "origin_city2", options_for_select(Location.all.order(:city).map{|l| l.city}, params["origin_city2".to_sym]), value: params["origin_city2".to_sym], prompt: "My friends are coming from...", class: 'w-100 origin-city form-control'%></div>
              <%= number_field_tag "adults2", 1, class: "d-none adults"%>
              <%= number_field_tag "children2", 0, class: "d-none"%>
            </div>
            <%= number_field_tag "passenger_group_count", 2, class: "d-none"%>
          </div>
        </div>
        <div class="text-end">
          <a href='/search' class="btn btn-link">Advanced Search</a>
          <button class="btn btn-success text-white" id = "submit" data-action="click->search-form#apiSearch" disabled>Lets fly! <i class="fas fa-plane-departure"></i></button>
        </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
