<div class="row">
  <div class="offset-1 col-10 offset-md-3 col-md-6">
    <div class="p-3 container shadow bg-white border-success">
      <h1 class = "mb-3 p-0 text-center text-success border-bottom border-primary sticky-header">
        Welcome! <span class="text-primary"><i class="fas fa-plane-alt"></i></span>
      </h1>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
        data: {turbo: false}, class: "m-0 p-0") do |f| %>
        <%= f.input :email %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :home_city_id, collection: Location.all.order(:city), label_method: :city, value_method: :id, prompt: "Choose a Location" %>
        <%= f.input :password %>
        <div class="text-center">
          <%= f.submit class: "btn btn-success text-white text-center" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
